generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  monitors  Monitor[]
}

model Monitor {
  id        String   @id @default(uuid())
  userId    String
  url       String
  createdAt DateTime @default(now())

  user      User @relation(fields: [userId], references: [id])
}
