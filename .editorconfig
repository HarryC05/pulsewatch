# editorconfig.org
root = true

[*]
indent_style = tab
end_of_line = lf
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,php,twig}]
indent_size = 4

[*.js,*.jsx,*.ts,*.tsx]
indent_size = 2

[*.scss]
indent_style = space

[*.md]
trim_trailing_whitespace = false

[app.config,cron.yaml]
indent_style = space

[*.yml]
indent_style = space
